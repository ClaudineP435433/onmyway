<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://cdn.vox-cdn.com/thumbor/KJ3Ravb-dKGIiYMlFVsb8zvWppo=/0x0:960x640/1200x800/filters:focal(404x244:556x396)/cdn.vox-cdn.com/uploads/chorus_image/image/54972253/15894350_581713975368307_9057135967199034580_n.0.png');">
  <div class="banner-content">
    <h1>On My Way</h1>
    <p>If you don't have time, someone will have it for you</p>
  </div>
</div>


<div class="wrapper">
  <div class="container-fluid">
    <div class="row">
      <% @deliveries.each do |delivery| %>
        <div class="col-xs-4">
          <div class="card">

            <div class="card-restaurant" style="background-image: url('<%= image_path delivery.restaurant.picture %>')">
              <div class="card-description">
                <h2><%= delivery.restaurant.name %></h2>
                <p><%= delivery.restaurant.category.name %></p>
              </div>
            </div>

            <div class="card-delivery-guy">
              <div class="card-delivery-text">
                <p>Book before :</p>
                <h5><%= delivery.closing_at.strftime("%m/%d/%Y at %I:%M%p") %></h5>
              </div>
              <%= image_tag "http://www.legorafi.fr/wp-content/uploads/2016/09/iStock_84615769_SMALL-e1474531457886-820x410.jpg", class: "card-user" %>
            </div>
            <%= link_to "", delivery, class: "delivery-link" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="map">
    GOOGLE MAP
  </div>
</div>
